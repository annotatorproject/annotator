name: @META_PROJECT_NAME@
version: @META_VERSION@
summary: @META_PROJECT_DESCRIPTION@
vendor: @META_AUTHOR_ORGANIZATION@ <@META_AUTHOR_MAINTAINER@>
description:
  @META_PROJECT_DESCRIPTION@
confinement: strict

build-packages: [gcc, g++, libc6-dev, libopencv-dev, qt5-default]

apps:
  @META_PROJECT_NAME@:
    command: qt5-launch bin/annotator
    plugs: [x11, unity7, home, opengl, network, network-bind]

parts:
  dlib:
    plugin: cmake
    source: http://github.com/davisking/dlib.git
  #annotatorlib:
  #  plugin: cmake
  #  source: https://github.com/lasmue/annotatorlib.git
  #  filesets:
  #    others:
  #     - "LICENSE"
  #     - "README.md"
  #     - "VERSION"
  #  snap:
  #    - -$others
  qt:
    plugin: nil
    stage-packages:
      - libqt5core5a
      - libqt5concurrent5
      - libqt5printsupport5
      - libqt5dbus5
      - libqt5gui5
      - libqt5network5
      - libqt5opengl5
      - libqt5widgets5
      - libqt5x11extras5
  integration:
    plugin: nil
    stage-packages:
      - ttf-ubuntu-font-family
      - breeze-icon-theme
      - hicolor-icon-theme
      - oxygen-icon-theme
    snap:
      - usr/share

  annotator:
    plugin: cmake
    configflags:
      - "-DOPTION_BUILD_ANNOTATORLIB=0"
    source: https://github.com/lasmue/annotator.git
    after: [dlib, qt, integration]
    #stage:
    #  - annotatorlib/src/annotatorlib-build/libannotatorlib.so
    organize:
      annotator: bin/annotator
      lib/plugins/: bin/plugins/
      qt5-launch: bin/qt5-launch
    snap:
      - -LICENSE
      - -README.md
      - -VERSION
      - bin/annotator
      - bin/plugins
      - lib/libannotatorlib.so
      - bin/qt5-launch

  copy:
    plugin: copy
    source: parts/annotator/build
    files: 
      annotatorlib/src/annotatorlib-build/libannotatorlib.so: lib/libannotatorlib.so
    after: [annotator]

